generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// backend/prisma/schema.prisma

enum Role {
  FRONTEND
  BACKEND
  FULLSTACK
  MOBILE
  DEVOPS
}

enum ExperienceLevel {
  INTERN
  JUNIOR
  MID
  SENIOR
}

model Candidate {
  id              String          @id @default(uuid())
  fullName        String
  email           String          @unique
  phoneNumber     String?
  linkedInUrl     String?
  githubUrl       String?
  role            Role
  experienceLevel ExperienceLevel
  resumeUrl       String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@map("candidates")
}